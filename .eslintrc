{
  "ignorePatterns": ["dist/**", "node_modules/**"],
  "extends": [
    "airbnb",
    "airbnb-typescript",
    "airbnb/hooks",
    "plugin:react/recommended"
  ],
  "plugins": ["jsx-a11y"],
  "env": {
    "browser": true,
    "es6": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "2023",
    "sourceType": "module",
    "allowImportEverywhere": true,
    "project": [
      "./tsconfig.json"
    ]
  },
  "overrides": [
    {
      "files": "*.tsx",
      "rules": {
        "react/prop-types": [0, "never"]
      }
    }
  ]
}